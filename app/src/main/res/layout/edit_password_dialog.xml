<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="Edit Password"
        android:textColor="@color/basic"
        android:layout_gravity="center"
        android:textSize="34dp"
        android:fontFamily="@font/bangers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/oldPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the old Password"
        android:layout_marginHorizontal="10dp"
        android:textColor="#A39F9F"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/newPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the new Password"
        android:inputType="textPassword"
        android:layout_marginHorizontal="10dp"
        android:textColor="#A39F9F"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/confirmNewPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm the new Password"
        android:inputType="textPassword"
        android:layout_marginHorizontal="10dp"
        android:textColor="#A39F9F"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/error_message_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/design_default_color_error"/>


</LinearLayout>