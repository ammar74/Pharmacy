<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".register.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        android:text="Register as a Pharmacy"
        android:textSize="30dp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="50dp"
        android:gravity="left" />

    <TextView
        android:id="@+id/PH_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="Pharmacy Information"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/pharmacyNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PH_info"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Pharmacy Name"
        android:inputType="text"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/pharmacyPhonesET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pharmacyNameET"
        android:layout_margin="20dp"
        android:gravity="center|start"
        android:inputType="phone"
        android:hint="Pharmacy Phones"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/pharmacyEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pharmacyPhonesET"
        android:layout_margin="20dp"
        android:hint="Pharmacy Email"
        android:inputType="textEmailAddress"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/pharmacyAddressET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pharmacyEmailET"
        android:layout_margin="20dp"
        android:hint="Pharmacy Address"
        android:inputType="text"
        android:textColor="#6C6B6E"/>

    <TextView
        android:id="@+id/password_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pharmacyAddressET"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/PH_passwordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_info"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/confirm_PH_passwordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PH_passwordET"
        android:layout_margin="20dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#6C6B6E"/>

    <Button
        android:id="@+id/getLocationBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basic"
        app:layout_constraintTop_toBottomOf="@id/confirm_PH_passwordET"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15dp"
        android:text="Get My Location"/>


    <Button
        android:id="@+id/pharmacyRegisterBTN2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/getLocationBTN"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_background"/>



</androidx.constraintlayout.widget.ConstraintLayout>