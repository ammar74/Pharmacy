<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".more.EditFragment">

    <TextView
        android:id="@+id/general_settings_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Account Settings"
        android:fontFamily="@font/bangers"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:background="@color/basic"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:weightSum="16"
        app:layout_constraintTop_toBottomOf="@id/general_settings_TV"
        android:layout_marginHorizontal="12dp">


        <TextView
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:text="Name :"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/pharmacyActualName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="mohamed"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:src="@drawable/ic_baseline_edit_24"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:weightSum="16"
        app:layout_constraintTop_toBottomOf="@id/Linear1"
        android:layout_marginHorizontal="12dp">


        <TextView
            android:id="@+id/phoneET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:text="Phone :"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/pharmacyActualPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="01024548488"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:src="@drawable/ic_baseline_edit_24"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:weightSum="16"
        app:layout_constraintTop_toBottomOf="@id/Linear2"
        android:layout_marginHorizontal="12dp">


        <TextView
            android:id="@+id/PasswordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:text="Password:"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/pharmacyActualPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="4dp"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:src="@drawable/ic_baseline_edit_24"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:weightSum="16"
        app:layout_constraintTop_toBottomOf="@id/Linear3"
        android:layout_marginHorizontal="12dp">


        <TextView
            android:id="@+id/AddressET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:text="Address :"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/pharmacyActualAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="3dp"
            android:text="ammar bn yasser st, cairo"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:src="@drawable/ic_baseline_edit_24"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/Linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:weightSum="16"
        app:layout_constraintTop_toBottomOf="@id/Linear4"
        android:layout_marginHorizontal="12dp">


        <TextView
            android:id="@+id/LocationET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:text="Location :"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/pharmacyActualLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="3dp"
            android:text="ammar bn yasser st, cairo"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:src="@drawable/placeholder"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>